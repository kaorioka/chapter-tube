%li.movie-box--list
  = link_to movie_chapter_path(chapter.movie,chapter) do
    = image_tag "https://img.youtube.com/vi/#{chapter.movie.youtube_id}/0.jpg", class: 'movie-box--list--thumb', alt: "#{chapter.title}"
    .chapter-title
      = chapter.title
    .chapter-pray-time
      = Time.at(chapter.end_time - chapter.start_time).utc.strftime('%M:%S')