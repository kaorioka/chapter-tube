= render 'layouts/hedder'
#content
  .main
    = render 'layouts/sidemenu'
    .movie
      .movie--player
        %iframe#player{frameborder: "0", height:"390", src: "https://www.youtube.com/embed/#{@chapter.movie.youtube_id}?start=#{@chapter.start_time}&end=#{@chapter.end_time}", type: "text/html", width: "680"}
      #info
        .movie--info-box
          %h1.movie--info-box__title
            = @chapter.title
          %ul.movie--info-box__actions
            %li.movie--info-box__actions.favo
              = link_to "#" do
                .fa.fa-star-o
                  %span お気に入り
            %li.movie--info-box__actions.like
              = link_to "#" do
                .fa.fa-thumbs-o-up
                  %span 12
        .movie--details
          %h2#chapters.heading 動画の詳細
          %h3.origin-title
            = @chapter.movie.title
            %span より
        %ul.movie--chapters
          %li.movie--chapter
            = link_to movie_chapter_path do
              = @chapter.title
              %span #{Time.at(@chapter.start_time).utc.strftime('%M:%S')} ~ #{Time.at(@chapter.end_time).utc.strftime('%M:%S')}
        .movie--info-area
